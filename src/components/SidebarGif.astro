---
const gifs = [
  { src: '/images/sidebar/cyber-1.gif', alt: 'Cyber animation 1' },
  { src: '/images/sidebar/cyber-2.gif', alt: 'Cyber animation 2' },
  { src: '/images/sidebar/hacker.gif', alt: 'Hacker animation' },
]
---

<aside class="gif-sidebar">
  {gifs.map((g) => (
    <img class="gif-item" src={g.src} alt={g.alt} loading="lazy" />
  ))}
</aside>

<style>
  .gif-sidebar {
    position: fixed;
    top: 120px;
    left: 10px; /* không đẩy layout */
    width: 150px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 20;
    pointer-events: none; /* không chặn click vào website */
  }

  .gif-item {
    width: 100%;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.1);
    pointer-events: auto;
  }

  @media (max-width: 1024px) {
    .gif-sidebar {
      display: none;
    }
  }
</style>
