---
const gifs = [
  { src: '/images/sidebar/1.gif', alt: '1' },
  { src: '/images/sidebar/2.gif', alt: '2' },
  { src: '/images/sidebar/3.gif', alt: '3' },
  { src: '/images/sidebar/4.gif', alt: '4' },
  { src: '/images/sidebar/5.gif', alt: '5' },
]
---

<aside class="sidebar">
  <div class="sidebar-content">
    {gifs.map((gif) => (
      <div class="gif-container">
        <img src={gif.src} alt={gif.alt} loading="lazy" />
      </div>
    ))}
  </div>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 100px;
    width: 200px;
    height: calc(100vh - 100px);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    overflow-y: auto;
  }

  .gif-container {
    border-radius: 8px;
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
  }

  .gif-container:hover {
    transform: scale(1.05);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .gif-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Ẩn trên mobile */
  @media (max-width: 1024px) {
    .sidebar {
      display: none;
    }
  }
</style>
